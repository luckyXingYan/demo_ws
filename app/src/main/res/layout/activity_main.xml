<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_animator"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn15"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Scroller分析"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_socket"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="socket"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_web_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="WebView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_act_service"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="activity与service交互"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_cp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="contentProvider"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_bitmap"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="大图局部位置预加载" />
    </LinearLayout>
</ScrollView>